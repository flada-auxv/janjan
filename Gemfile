  gem 'annotate'
  gem 'rails-erd'
end

group :test do
  gem 'capybara'
  gem 'capybara-puma'
  gem 'database_rewinder'
  gem 'launchy'
  gem 'mocha'
  gem 'poltergeist'
  gem 'selenium-webdriver'
end

